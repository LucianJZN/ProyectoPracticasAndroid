<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content">
    <RelativeLayout
        android:layout_width="350dp"
        android:layout_height="140dp"
        android:background="@drawable/border_product"
        android:padding="0dp"
        tools:ignore="MissingConstraints">

        <!-- Nombre del filtro-->
        <TextView
            android:id="@+id/txt_name_product"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_alignParentTop="true"

            android:background="@drawable/border_name_filter"
            android:gravity="center"
            android:text="@string/filter_by_name"
            android:textSize="26sp"
            android:textStyle="bold"/>

        <!-- Escribir -->
        <EditText
            android:id="@+id/editTextText"
            android:layout_width="300dp"
            android:layout_height="70dp"
            android:ems="20"
            android:inputType="text"
            android:text="@string/filter_write"
            android:textColor="@color/grey"
            android:layout_marginStart="25dp"
            android:layout_marginTop="58dp"
            android:paddingStart="10dp"
            android:paddingEnd="10dp"
            android:background="@drawable/border_edittext_filter"
            />
    </RelativeLayout>

</androidx.constraintlayout.widget.ConstraintLayout>
